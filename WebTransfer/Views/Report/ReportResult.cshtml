@model List<WebTransfer.Models.Transaction>

@{
    ViewData["Title"] = "Transaction Report";
}

<h2 class="mt-3 mb-4">Transaction Report</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Amount</th>
                <th>From Currency</th>
                <th>To Currency</th>
                <th>Converted Amount</th>
                <th>Transaction Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.Amount</td>
                    <td>@transaction.FromCurrency</td>
                    <td>@transaction.ToCurrency</td>
                    <td>@transaction.ConvertedAmount</td>
                    <td>@transaction.TransactionDate.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No transactions found for the selected date range.</p>
}
